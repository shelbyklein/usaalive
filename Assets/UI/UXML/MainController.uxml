<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:Template name="PTZControlPanel" src="project://database/Assets/UI/UXML/PTZControlPanel.uxml?fileID=9196873975932516003" />
    <ui:Template name="ImageControlPanel" src="project://database/Assets/UI/UXML/ImageControlPanel.uxml?fileID=9196873975932516003" />
    <Style src="project://database/Assets/UI/USS/ControllerTheme.uss?fileID=7433441132597879392" />
    
    <ui:VisualElement name="main-container" class="main-container">
        <!-- Header Bar -->
        <ui:VisualElement name="header-bar" class="header-bar">
            <ui:Label text="USAALive Camera Controller" name="title-label" class="title-label" />
            <ui:VisualElement name="connection-status" class="connection-status">
                <ui:Label text="â—" name="status-indicator" class="status-indicator disconnected" />
                <ui:Label text="Disconnected" name="status-text" class="status-text" />
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- Main Content Area -->
        <ui:VisualElement name="main-content" class="main-content">
            <!-- Left Panel - Camera Controls -->
            <ui:VisualElement name="left-panel" class="left-panel">
                <!-- Camera Selection -->
                <ui:VisualElement name="camera-selection-panel" class="control-panel">
                    <ui:Label text="Camera Selection" class="panel-title" />
                    <ui:VisualElement name="camera-buttons" class="camera-buttons">
                        <ui:Button text="Cam 1" name="camera-btn-0" class="camera-button active" />
                        <ui:Button text="Cam 2" name="camera-btn-1" class="camera-button" />
                        <ui:Button text="Cam 3" name="camera-btn-2" class="camera-button" />
                        <ui:Button text="Cam 4" name="camera-btn-3" class="camera-button" />
                    </ui:VisualElement>
                    <ui:VisualElement name="camera-info" class="camera-info">
                        <ui:Label text="192.168.1.100:52381" name="camera-ip-label" class="camera-ip" />
                        <ui:Button text="Connect" name="connect-button" class="connect-button" />
                    </ui:VisualElement>
                </ui:VisualElement>

                <!-- PTZ Controls -->
                <ui:VisualElement name="ptz-panel" class="control-panel">
                    <ui:Label text="Pan/Tilt/Zoom Controls" class="panel-title" />
                    <ui:Instance template="PTZControlPanel" name="ptz-control-instance" />
                </ui:VisualElement>

                <!-- Memory Presets -->
                <ui:VisualElement name="presets-panel" class="control-panel">
                    <ui:Label text="Memory Presets" class="panel-title" />
                    <ui:VisualElement name="preset-controls" class="preset-controls">
                        <ui:VisualElement name="preset-buttons-row-1" class="preset-row">
                            <ui:Button text="1" name="preset-1" class="preset-button" />
                            <ui:Button text="2" name="preset-2" class="preset-button" />
                            <ui:Button text="3" name="preset-3" class="preset-button" />
                        </ui:VisualElement>
                        <ui:VisualElement name="preset-buttons-row-2" class="preset-row">
                            <ui:Button text="4" name="preset-4" class="preset-button" />
                            <ui:Button text="5" name="preset-5" class="preset-button" />
                            <ui:Button text="6" name="preset-6" class="preset-button" />
                        </ui:VisualElement>
                        <ui:VisualElement name="preset-actions" class="preset-actions">
                            <ui:Button text="Set" name="set-preset-button" class="preset-action-button" />
                            <ui:Button text="Clear" name="clear-preset-button" class="preset-action-button" />
                        </ui:VisualElement>
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>

            <!-- Center Panel - Video Preview -->
            <ui:VisualElement name="center-panel" class="center-panel">
                <ui:VisualElement name="video-container" class="video-container">
                    <ui:VisualElement name="video-preview" class="video-preview">
                        <ui:Label text="NDI Video Preview" class="video-placeholder" />
                        <ui:VisualElement name="video-overlay" class="video-overlay">
                            <ui:Label text="Camera 1" name="camera-overlay-label" class="camera-overlay-label" />
                            <ui:VisualElement name="video-controls" class="video-controls">
                                <ui:Button text="â¸" name="video-pause-button" class="video-control-button" />
                                <ui:Button text="ðŸ“·" name="video-snapshot-button" class="video-control-button" />
                                <ui:Button text="ðŸ”" name="video-fullscreen-button" class="video-control-button" />
                            </ui:VisualElement>
                        </ui:VisualElement>
                    </ui:VisualElement>
                </ui:VisualElement>
                
                <!-- Quick Controls Bar -->
                <ui:VisualElement name="quick-controls" class="quick-controls">
                    <ui:Button text="Home" name="home-button" class="quick-control-button" />
                    <ui:Button text="Stop" name="stop-button" class="quick-control-button emergency" />
                    <ui:Button text="AF" name="autofocus-button" class="quick-control-button" />
                    <ui:Button text="Power" name="power-button" class="quick-control-button" />
                </ui:VisualElement>
            </ui:VisualElement>

            <!-- Right Panel - Image & System Controls -->
            <ui:VisualElement name="right-panel" class="right-panel">
                <!-- Focus Controls -->
                <ui:VisualElement name="focus-panel" class="control-panel">
                    <ui:Label text="Focus Control" class="panel-title" />
                    <ui:VisualElement name="focus-controls" class="focus-controls">
                        <ui:VisualElement name="focus-mode" class="control-row">
                            <ui:Label text="Mode:" class="control-label" />
                            <ui:DropdownField name="focus-mode-dropdown" class="focus-mode-dropdown" />
                        </ui:VisualElement>
                        <ui:VisualElement name="focus-buttons" class="focus-buttons">
                            <ui:Button text="Near" name="focus-near-button" class="focus-button" />
                            <ui:Button text="Far" name="focus-far-button" class="focus-button" />
                        </ui:VisualElement>
                        <ui:Slider name="focus-slider" class="focus-slider" direction="Horizontal" low-value="0" high-value="100" />
                    </ui:VisualElement>
                </ui:VisualElement>

                <!-- Zoom Controls -->
                <ui:VisualElement name="zoom-panel" class="control-panel">
                    <ui:Label text="Zoom Control" class="panel-title" />
                    <ui:VisualElement name="zoom-controls" class="zoom-controls">
                        <ui:VisualElement name="zoom-buttons" class="zoom-buttons">
                            <ui:Button text="Wide" name="zoom-wide-button" class="zoom-button" />
                            <ui:Button text="Tele" name="zoom-tele-button" class="zoom-button" />
                        </ui:VisualElement>
                        <ui:Slider name="zoom-slider" class="zoom-slider" direction="Horizontal" low-value="0" high-value="100" />
                        <ui:VisualElement name="zoom-speed" class="control-row">
                            <ui:Label text="Speed:" class="control-label" />
                            <ui:SliderInt name="zoom-speed-slider" class="speed-slider" direction="Horizontal" low-value="1" high-value="7" value="3" />
                        </ui:VisualElement>
                    </ui:VisualElement>
                </ui:VisualElement>

                <!-- Image Controls -->
                <ui:VisualElement name="image-panel" class="control-panel">
                    <ui:Label text="Image Control" class="panel-title" />
                    <ui:Instance template="ImageControlPanel" name="image-control-instance" />
                </ui:VisualElement>

                <!-- System Status -->
                <ui:VisualElement name="system-panel" class="control-panel">
                    <ui:Label text="System Status" class="panel-title" />
                    <ui:VisualElement name="system-info" class="system-info">
                        <ui:VisualElement name="status-row" class="status-row">
                            <ui:Label text="Connection:" class="status-label" />
                            <ui:Label text="Connected" name="connection-status-label" class="status-value connected" />
                        </ui:VisualElement>
                        <ui:VisualElement name="status-row" class="status-row">
                            <ui:Label text="PTZ Position:" class="status-label" />
                            <ui:Label text="Pan: 0Â° Tilt: 0Â°" name="ptz-position-label" class="status-value" />
                        </ui:VisualElement>
                        <ui:VisualElement name="status-row" class="status-row">
                            <ui:Label text="Zoom Level:" class="status-label" />
                            <ui:Label text="50%" name="zoom-level-label" class="status-value" />
                        </ui:VisualElement>
                        <ui:VisualElement name="status-row" class="status-row">
                            <ui:Label text="Focus Mode:" class="status-label" />
                            <ui:Label text="Auto" name="focus-mode-label" class="status-value" />
                        </ui:VisualElement>
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- Footer Bar -->
        <ui:VisualElement name="footer-bar" class="footer-bar">
            <ui:Label text="F1-F3: Presets | WASD: Pan/Tilt | +/-: Zoom | Q/E: Focus | Space: Stop | Tab: Next Camera" class="help-text" />
            <ui:VisualElement name="footer-status" class="footer-status">
                <ui:Label text="Commands Sent: 0" name="commands-counter" class="commands-counter" />
                <ui:Label text="FPS: 60" name="fps-counter" class="fps-counter" />
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>